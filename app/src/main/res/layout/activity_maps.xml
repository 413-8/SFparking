<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoAnchorPoint="0.2"
    sothree:umanoParalaxOffset="25dp">


    <!-- Main Content -->
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>


    <!-- Sliding Layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="?android:dividerVertical"
        android:showDividers="beginning|middle|end">

        <!-- when no pin, show park here and history button -->
        <LinearLayout style="?android:buttonBarStyle"
            android:id="@+id/layout_no_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?android:dividerHorizontal"
            android:showDividers="beginning|middle|end">

            <Button style="?android:buttonBarButtonStyle"
                android:id="@+id/i_park_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Park Here"
                android:onClick="parkButton"/>
            <Button style="?android:buttonBarButtonStyle"
                android:id="@+id/hist_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="History"
                android:onClick="historyButton"/>
        </LinearLayout>


        <!-- Panel when pin is dropped -->
        <TextView
            android:id="@+id/data_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:gravity="left"
            android:textColor="#000000"
            android:textSize="15sp"/>



        <LinearLayout style="?android:buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:divider="?android:dividerHorizontal"
            android:showDividers="beginning|middle|end">

            <Button style="?android:buttonBarButtonStyle"
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save Pin" />

            <Button style="?android:buttonBarButtonStyle"
                android:id="@+id/ok_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remove Pin"
                android:onClick="removePinButton"/>

        </LinearLayout>
    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
